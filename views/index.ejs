    <h1 class="text-warning text-center">User List</h1>
    <table class="table text-center table-striped table-hover table-sm table-bordered">
        <thead class=" text-light bg-dark">
          <tr>
            <th>ID</th>
            <th>Fast Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Modify</th>
          </tr>
        </thead>
        
        
       
       
       
        <tbody>
         
         <% for( let i = 0; i < user.length; i++ ) { %>
         
        
         
          <tr>
            <th><%= i %>   </th>
            <td><%= user[i].name.fname %> </td>
            
            <td><%= user[i].name.lname %> </td>
            <td><%= user[i].email %>  </td>
            <td> <%= user[i].address %> </td>
            
            <td class="d-flex justify-content-around bg-dark">
                <a class="bg-success text-warning" href="/update?id=<%= user[i]._id %>" ><i class="fas fa-user-edit"></i></a>
            
                <a class="bg-danger delete" delet="<%= user[i]._id %>"><i class="fas fa-trash-alt"></i></a>
            </td>
          </tr>
          <% } %>
        </tbody>
       
     
       
      </table>
    <!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="update" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-warning" id="exampleModalLabel">Update Form</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       
      
<form id='data_update'  method="POST">
  <label for="name">name</label>
  <input type="hidden" name="id" value="">
<input type="name" class="form-control" name="" value="<%= user._id%> " placeholder="name">
<label for="name">Email</label>
<input type="email" class="form-control" name="email" placeholder="Email" value=''>
<label for="name">address</label>
<input type="address" class="form-control" name="address" placeholder="address" value="">
<div class="d-grid mt-3">
  email:<input type="text" value="<%=user.email%>">
<button class="btn btn-info "type="submit">submit</button>
</div>
</form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
      
     

